<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxy.shopsystem.base.dao.ShopChartDao">
    <resultMap id="BaseMap" type="com.zxy.shopsystem.base.model.form.jsonModel.ShopChart">
        <result column="shop" jdbcType="VARCHAR" property="shop"/>
        <result column="operator" jdbcType="VARCHAR" property="operator"/>
        <result column="barcode" jdbcType="VARCHAR" property="barcode"/>
        <result column="commodity" jdbcType="VARCHAR" property="commodity"/>
        <result column="number" jdbcType="INTEGER" property="number"/>
        <result column="totalprice" jdbcType="INTEGER" property="totalPrice"/>
        <result column="time" jdbcType="DATE" property="time"/>
    </resultMap>
    <select id="findByCondition" resultMap="BaseMap">
        SELECT shop, operator, barcode, commodity,count(barcode) as number,sum(sellprice) as totalprice, time FROM
        shop.shop_chart group by barcode,time,operator
        having 1=1
        <if test="shopNo!=null and shopNo !=0">
            and shop = (select name from department where no = #{shopNo})
        </if>
        <if test="barcode!=null and barcode!=''">
            and barcode = #{barcode}
        </if>
        <if test="operatorNo!=null and operatorNo!=0">
            and operator = (select name from employee where eid = #{operatorNo})
        </if>
        <if test="date!=null">
            and time = #{date}
        </if>
    </select>
</mapper>